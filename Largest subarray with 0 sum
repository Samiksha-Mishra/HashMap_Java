class Solution {
    int maxLength(int arr[]) {
        HashMap<Integer,Integer> map =  new HashMap<>();
        int prefix = 0;
        int maxLen = 0;
        for(int i = 0 ; i < arr.length ; i++){
            prefix+=arr[i];
            if(prefix==0) maxLen = i+1;
            if(map.containsKey(prefix)){
                maxLen = Math.max(maxLen,i-map.get(prefix));
            }else{
                map.put(prefix,i);
            }
        }
        return maxLen;
        
    }
}
